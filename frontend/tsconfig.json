{
    "compilerOptions": {
      "target": "ESNext",
      "module": "nodenext",
      "moduleResolution": "nodenext",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "rootDir": "src",
      "outDir": "../backend/dist",
    },
    "exclude": ["../backend/dist"]
  }